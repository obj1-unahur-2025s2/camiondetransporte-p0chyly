import cosas.*

describe "Testeamos las cosas"{

  test "Peso de un paquete de 200 ladrillos"{
    paqueteLadrillos.cargarLadrillos(200)
    assert.equals(400, paqueteLadrillos.peso())
  }

  test "El peso de la bateria antiaerea si no tiene misiles"{
    bateriaAntiaerea.descargar()
    assert.equals(200, bateriaAntiaerea.peso())
  }

  test "Peso del contenedor portuario con una carga de un Bumblebee y 2 Knight Riders"{
    contenedorPortuario.cargarCosa(bumblebee)
    contenedorPortuario.cargarCosa(knightRider)
    contenedorPortuario.cargarCosa(knightRider)
    assert.equals(1900, contenedorPortuario.peso())
  }

  test "Peso de residuos radioactivos de 30kg con embalaje"{
    residuosRadioactivos.cambiarPeso(30)
    embalajeDeSeguridad.cosaEmbalada(residuosRadioactivos)
    assert.equals(30, embalajeDeSeguridad.peso())
  }

  test "Bultos del contenedor portuario con 2 bumblebee, 700 ladrillos y residuos radioactivos"{
    contenedorPortuario.cargarCosa(bumblebee)
    contenedorPortuario.cargarCosa(bumblebee)
    paqueteLadrillos.cargarLadrillos(700)
    contenedorPortuario.cargarCosa(paqueteLadrillos)
    contenedorPortuario.cargarCosa(residuosRadioactivos)
    assert.equals(9, contenedorPortuario.bultosOcupados())
  }

  }