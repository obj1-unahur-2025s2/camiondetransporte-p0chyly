import camion.*
import cosas.*

describe "Testeos de camion" {

  test "Peso de camion vacio"{
  assert.equals(1000, camion.peso())
  }

  test "Peso del camion si lo cargamos y lo descargamos"{
    camion.cargarCosa(bumblebee)
    camion.cargarCosa(knightRider)
    camion.descargarCosa(bumblebee)
    camion.descargarCosa(knightRider)
    assert.equals(1000, camion.peso())
  }

  test "Peso del camion con 123 ladrillos"{
    paqueteLadrillos.cargarLadrillos(123)
    camion.cargarCosa(paqueteLadrillos)
    assert.equals(1270, camion.peso())
  }

  test "Peso del camion al cargar 10 ladrillos y sufrir cambios"{
    paqueteLadrillos.cargarLadrillos(10)
    camion.cargarCosa(paqueteLadrillos)
    assert.equals(1044, camion.peso())
  }

}